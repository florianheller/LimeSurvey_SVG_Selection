<!-- Multiple Choice -->

<!-- Sub-question list -->
<input type="hidden" name="MULTI{{name}}" value="{{anscount}}" />
<ul class="{{coreClass}} list-unstyled" role="group" aria-labelledby="ls-question-text-{{basename}}" style="display:none;">
    {% for aRow in aRows %}
        {% include './survey/questions/answer/multiplechoice/rows/answer_row.twig' with aRow only %}
    {% endfor %}
</ul>
<!-- End of sub-question list -->

<!-- embedded SVG -->
{% set svgSelectionView = './views/svgSelection.twig' %}
{{ include(svgSelectionView) }}
<!-- end of embedded SVG  -->
